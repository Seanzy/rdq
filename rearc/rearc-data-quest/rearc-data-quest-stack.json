{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Rearc Data Quest",

    "Parameters": { 
        "Environment": {
            "Description": "Environment to deploy in", 
            "Type": "String"
        },
        "SourceCodeBucket": {
            "Description": "Bucket for lambda function code", 
            "Type": "String"
        },
        "API_URL": {
            "Description": "Part 2 API URL",
            "Type": "String",
            "Default": "https://datausa.io/api/data?drilldowns=Nation&measures=Population"
        },
        "BASE_URL": {
            "Description": "Part 1 API URL",
            "Type": "String",
            "Default": "https://download.bls.gov/pub/time.series/"
        },
        "REARC_BUCKET": {
            "Description": "Bucket that contains files synced from the BASE_URL website",
            "Type": "String",
            "Default": "rearc-data-quest"
        },
        "REARC_TABLE": {
            "Description": "DynamoDB table that contains metadata of files synced from BASE_URL website",
            "Type": "String",
            "Default": "rearc-data-quest"
        }
    },

    "Resources": {
        "RearcDataQuestFunction": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Code": {
                    "S3Bucket": {"Ref": "SourceCodeBucket"}
                },
                "Environment": {
                    "Variables": {
                        "API_URL": {"Ref": "API_URL"},
                        "BASE_URL": {"Ref": "BASE_URL"},
                        "REARC_BUCKET": {"Ref": "REARC_BUCKET"},
                        "REARC_TABLE": {"Ref": "REARC_TABLE"}
                    }
                },
                "Handler": "lambda_function.lambda_handler",
                "Role": {"Fe::GetAtt" : ["RearcDataQuestRole", "Arn"]},
                "Runtime": "python3.9",
                "FunctionName": {"Fn::Sub": "rdq-${Environment}-lambda-${AWS::StackName}-sean-gurson-1-${AWS::Region}"},
                "Description": "Lambda automation to sync files between website and S3 bucket and download (api json) file",
                "Timeout": "30", 
                "MemorySize:": 2048
            }
        }
    },
    "RearcDataQuestRole": {
        "Type": "AWS::IAM::Role",
        "Properties": {
            "RoleName": {"Fn::Sub": "lambda-${AWS::StackName}-sean-gurson-1-${AWS::Region}-role"},
            "AssumeRolePolicyDocument": {
                "Version": "2012-10-17",
                "Statement": [
                    {
                        "Effect": "Allow",
                        "Principal": {
                            "Service": [
                                "lambda.amazonaws.com"
                            ]
                        }, 
                        "Action": [
                            "sts:AssumeRole"
                        ]
                    }
                ]
            },
            "Path": "/"
        }
    }
}










